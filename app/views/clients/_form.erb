<%@client.errors.full_messages.each do |message|%>
  <b><%= message %><b></br>
<%end%>

<%= form_for @client do |c|%>
  <%= c.label :name, "Nome"%>
  <%= c.text_field :name %></br></br>
  <%= c.label :document, "CPF"%>
  <%= c.text_field :document %></br></br>
  <%= c.label :email, "Email"%>
  <%= c.text_field :email %></br></br>
  <%= c.submit "Enviar" %>
<%end%>

