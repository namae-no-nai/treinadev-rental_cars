<h1>Locações</h1>

<%= form_with url: search_rentals_path, method: :get do |f| %>
  <%= f.label :q, 'Código'%>
  <%= f.text_field :q%>
  <%= f.submit 'Buscar'%>
<% end %>

<div>
<% if @rentals.any? %>
   <table>
    <thead>
      <tr>
        <th>Código</th>
        <th>Data de início</th>
        <th></th>
        <th>Data de término</th>
        <th></th>
        <th>Cliente</th>
        <th></th>
        <th>Categoria</th>
      </tr>
    </thead>
    <tbody>
      <% @rentals.each do |rental|%>
      <tr>
        <td><%= rental.code %></td>
        <td><%= localize(rental.start_date) %></td>
        <td></td>
        <td><%= localize(rental.end_date) %></td>
        <td></td>
        <td><%= rental.client.name %></td>
        <td></td>
        <td><%= rental.car_category.name %></td>
      </tr>      
      <%end%>
    </tbody>
  </table>
  <%else%>
  <p>Nenhuma locação cadastrada</p>
<%end%>
</div>
<div>
<p><%= link_to "Registrar locação", new_rental_path %></p>
<p><%= link_to "Voltar", root_path %></p>
</div>